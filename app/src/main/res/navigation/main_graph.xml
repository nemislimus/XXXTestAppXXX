<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.practicum.xxxtestappxxx.fragments.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_noNameFragment"
            app:destination="@id/noNameFragment" />

        <action
            android:id="@+id/action_mainFragment_to_exampleFragment"
            app:destination="@id/exampleFragment" />

    </fragment>
    <fragment
        android:id="@+id/noNameFragment"
        android:name="com.practicum.xxxtestappxxx.fragments.NoNameFragment"
        android:label="fragment_no_name"
        tools:layout="@layout/fragment_no_name" />

    <fragment
        android:id="@+id/exampleFragment"
        android:name="com.practicum.xxxtestappxxx.fragments.ExampleFragment"
        android:label="fragment_example"
        tools:layout="@layout/fragment_example" />


</navigation>